	<%- include ("../partials/header.ejs") %>
	<link rel="stylesheet" type="text/css" href="creation/index/index.css">
	<link rel="stylesheet" type="text/css" href="/loading/index.css">
</head>
	<body>
		<%- include ("../partials/loading.ejs") %>
		<canvas id="myCanvas" resize></canvas>

		<% if(user != null && user != undefined) { %>
			<div class="" id="utilities">
				<a href="/<%= user.id %>">
					<i class="fas fa-home uti" id="to-homepage-btn">
						<span>Homepage</span>
					</i>
				</a>
				<a href="/new">
					<i class="fas fa-save uti" id="save-btn">
						<span>Save</span>
					</i>
				</a>
				<i class="fas fa-undo uti" id="replay-btn">
					<span>Replay</span>
				</i>
				<i class="far fa-times-circle" id="discard-btn">
					<span>Discard</span>
				</i>
			</div>
		<% } %>

		<div class="container hide" id="intro">
			<div class="alert alert-info" id="alert" role="alert">
				<i>
					Enter is the incantation to unlock, a-z are tools to unleash the magic of your fingers. Make your music legendary !
				<i>
			</div>
		</div>

		<% if(user == null || user == undefined) { %>
			<nav class="navbar fixed-bottom navbar-expand-lg navbar-light">
				<a class="navbar-brand" href="#">
					Fingers
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li>
							Join our community !
						</li>
						<li class="nav-item right">
							<button type="button" class="btn btn-light">
								<a href="/signin">Sign in</a>
							</button>
						</li>
						<li>
							<button type="button" class="btn btn-light">
								<a href="/signup">Sign up</a>
							</button>
						</li>
					</ul>
				</div>
			</nav>	
		<% } %>
		
		<%- include ("../partials/footer.ejs") %>
		<script type="module" src="/loading/index.js"></script>
		<script type="module" src="creation/index/index.js"></script>
	</body>

	</html>